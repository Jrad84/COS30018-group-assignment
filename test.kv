    day: day
    startTime: startTime
    endTime: endTime
    direction: direction
    output: output
	t1:t1
	t2:t2
	t3:t3
	t4:t4
	t5:t5
    bestRoute: bestRoute

    # Window.size = (250, 100)



    GridLayout:
        cols: 2
