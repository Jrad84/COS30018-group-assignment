            # pos_hint: {'left': 1}
            cols: 2

            Label:
                text: "Start Scats Point: "

            TextInput:
                id: startScats
                multiline: False

            Label:
                text: "End Scats Point: "

            TextInput:
                id: endScats
                multiline: False

            Label:
                text: "Enter day( 0 = Mon): "

            TextInput:
                id: day
                multiline: False

            Label:
                text: "Start time (without ':'): "

            TextInput:
                id: startTime
                multiline: False

            Label:
                text: "End time: "

            TextInput:
                id: endTime
                multiline: False

            Label:
                text: "Direction (N, S, E, W): "

            TextInput:
                id: direction
                multiline: False
			
			Label:
				text:"Model"
                
		
			GridLayout:
				cols:5
				row_default_height: 20
				# size: root.width, 150
				CheckBox:
					id: t1
					group:'model'
					state:'down'					
				CheckBox:
					id: t2
					group:'model'
				CheckBox:
					id: t3	
					group:'model'
					
				CheckBox:
					id: t4
					group:'model'
					
				CheckBox:
					id: t5
					group:'model'
				Label:
					text:'GRU'
				Label:
					text:'LSTM'
				Label:
					text:'SAES'
				Label:
					text:'RNN'
				Label:
					text:'BI'
			
			Label:
            Button:
                text: "Predict Fastest Route"
                font_size: 14
                size: 200, 50
                size_hint: None, None # <--
                on_press: root.fullPrediction()
			
			

			      

        GridLayout:
            cols: 1
            row_default_height: 40
            # size: root.width, 150
           
            Label:
                size_hint_y:None
                height: 30
                text: "Output: "

            Label:
                size_hint_y:None
                height: 30
                id: output
                text: ""
		GridLayout:
			cols:1			
			Label:
				id: bestRoute
				size_hint_y: None
				text_size: self.width, None
				height: self.texture_size[1]
				
			
			
			
